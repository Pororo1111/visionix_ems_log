{
  "name": "visionx-ems-log",
  "version": "1.0.0",
  "description": "Prometheus 메트릭 수집 및 PostgreSQL(TimescaleDB) 저장 서비스",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/main.ts",
    "start": "node dist/main.js",
    "start:migrate": "drizzle-kit push --force && node dist/main.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push"
  },
  "keywords": [
    "prometheus",
    "postgresql",
    "timescaledb",
    "monitoring",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "pg": "^8.16.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.31.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}